&.znacky
  width 1000px
  position relative
  margin-bottom 30px
  ul
    list-style-type none
    padding 0px !important
    margin 10px 0px 0px 0px !important
    width 800px
    transition transform 0.6s
    li
      float left
      width 100%
      padding 0px !important
      margin-left 0px !important
      position relative
      .text
        float left
        width 100%
        height 67px
        .name
          line-height 60px
          font-size 30px
          margin-left 30px
          font-weight 700
        .count
        .age
          position absolute
          &.new
            top 4px
          &.old
            top 35px
        .count
          right 260px
        .age
          right 10px


      .canvas-container
        float left
        position relative
        width 100%
        background lighten(#003366, 99%)
        box-sizing content-box
        canvas
          float right
          padding-right 10px
          z-index 4
          position relative
          &.old
            padding-top 10px
        a
        .year-label
          box-sizing border-box
          position absolute
          top 0px
          left 0px
          line-height 1.25em
          color #003366
          opacity 0.1
          margin-left 30px
          font-weight 900
        &.new
          padding-top 10px
          padding-bottom 10px
        &.old
          padding-top 10px
          padding-bottom 10px
          background lighten(#acb5be, 99%)
          .year-label
            color #acb5be
        .tick
          position absolute
          top 0px
          bottom 50%
          transform translate(0px, 150%)
          width 1px
          z-index 3
          &:nth-child(1)
            right (3px + 5 * 11px)
          &:nth-child(2)
            right (3px + 15 * 11px)
          &:nth-child(3)
            right (3px + 25 * 11px)
          &:nth-child(4)
            right (3px + 35 * 11px)
          &:nth-child(5)
            right (3px + 45 * 11px)
          &:nth-child(6)
            right (3px + 55 * 11px)
          &:nth-child(7)
            right (3px + 65 * 11px)
          .value
            position absolute
            top 50%
            transform translate(-50%, -50%)
            left 0px
            text-align center
            font-size 12px
            white-space nowrap
          .age-up
          .age-down
            position absolute
            top 50%
            width 100px
            left -50px
            text-align center
            font-size 10px
          .age-up
            transform translate(0, -120%)
          .age-down
            transform translate(0, 20%)
          .border-top
          .border-bottom
            position absolute
            border-left 1px dashed #c
          .border-top
            top 0px
            bottom 65%
          .border-bottom
            bottom 0px
            top 65%
      &.no-new
        .age-down
        .border-bottom
          display none

  .selector
    position absolute
    top 50%
    transform translate(0, -50%)
    right 170px
    width 10px

    .item
      display block
      width 13px
      height 26px
      position relative
      text-decoration none !important
      .znacka
        color #6
        width 200px
        display block
        font-size 9px
        margin-left 25px
        line-height 15px
      &:after
        position absolute
        top 0px
        left 0px
        content " "
        background #e
        width 14px
        height 14px
        border-radius 50%
      &:hover
        .znacka
          color #0
        &:after
          background #d
          box-shadow 0px 0px 9px #e
      &.active
        .znacka
          color desaturate(ColorHeading, 30%)
        &:after
          background ColorHeading
          box-shadow 0px 0px 5px lighten(ColorHeading, 50%)

      &:last-of-type
        margin-bottom 0px
    .arrow
      position absolute
      font-size 36px
      width 25px
      height 25px
      line-height 22px
      text-align center
      text-decoration none !important
      color #6
      &:hover
        color #0
        text-shadow 0px 0px 5px #a
      &.arrow-top
        top -29px
        left -6px
        transform rotate(-90deg)
      &.arrow-bottom
        bottom -17px
        left -5px
        transform rotate(90deg)
&.znacky-all
  ul
    li
      width 1000px
