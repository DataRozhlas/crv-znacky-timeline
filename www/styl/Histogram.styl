&.znacky
  width 1000px
  position relative
  ul
    list-style-type none
    padding 0px
    margin 10px 0px 0px 0px
    width 800px
    transition transform 0.6s
    li
      float left
      width 100%
      position relative
      .text
        float left
        width 100%
        height 67px
        .name
          line-height 60px
          font-size 30px
          font-weight 700
        .count
        .age
          position absolute
          &.new
            top 4px
          &.old
            top 35px
        .count
          right 260px
        .age
          right 10px


      .canvas-container
        float left
        position relative
        width 100%
        background lighten(#003366, 99%)
        box-sizing content-box
        canvas
          float right
          padding-right 10px
        a
        .year-label
          box-sizing border-box
          position absolute
          top 0px
          left 0px
          line-height 1.25em
          color #003366
          opacity 0.1
          margin-left 10px
          font-weight 900
        &.new
          padding-top 10px
          padding-bottom 10px
        &.old
          padding-top 10px
          padding-bottom 10px
          background lighten(#acb5be, 99%)
          .year-label
            color #acb5be
  .selector
    position absolute
    top 50%
    transform translate(0, -50%)
    right 170px
    width 10px

    .item
      display block
      width 13px
      height 26px
      position relative
      text-decoration none !important
      .znacka
        color #6
        width 200px
        display block
        font-size 9px
        margin-left 25px
        line-height 15px
      &:after
        position absolute
        top 0px
        left 0px
        content " "
        background #e
        width 14px
        height 14px
        border-radius 50%
      &:hover
        .znacka
          color #0
        &:after
          background #d
          box-shadow 0px 0px 9px #e
      &.active
        .znacka
          color desaturate(ColorHeading, 30%)
        &:after
          background ColorHeading
          box-shadow 0px 0px 5px lighten(ColorHeading, 50%)

      &:last-of-type
        margin-bottom 0px
    .arrow
      position absolute
      font-size 36px
      width 25px
      height 25px
      line-height 22px
      text-align center
      text-decoration none !important
      color #6
      &:hover
        color #0
        text-shadow 0px 0px 5px #a
      &.arrow-top
        top -29px
        left -6px
        transform rotate(-90deg)
      &.arrow-bottom
        bottom -17px
        left -5px
        transform rotate(90deg)
&.znacky-all
  ul
    li
      width 1000px
